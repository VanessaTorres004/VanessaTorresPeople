<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:VanessaTorresPeople"
             x:Class="VanessaTorresPeople.MainPage"
             BackgroundColor="#f3f3f3">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">


            <Frame x:Name="vtorres_card"
                   BackgroundColor="LightCyan"
                   CornerRadius="10"
                   HasShadow="True"
                   Padding="10"
                   Margin="0,0,0,10">
                <StackLayout Orientation="Horizontal" Spacing="15">

                    <Image x:Name="vtorres_image"
                           Source="vtorres.png"
                           WidthRequest="100"
                           HeightRequest="100"
                           Aspect="AspectFill"
                           VerticalOptions="Center" />


                    <StackLayout VerticalOptions="Center">
                        <Label x:Name="vtorres_name_label"
                               Text="Vanessa Torres"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="BlueViolet" />
                        <Label x:Name="vtorres_age_label"
                               Text="20 años"
                               FontSize="16"
                               TextColor="Coral" />
                    </StackLayout>
                </StackLayout>
            </Frame>


            <Entry x:Name="vtorres_new_person_entry" 
                   Placeholder="Ingresa un nombre" 
                   BackgroundColor="Black" 
                   Margin="0,0,0,10" />


            <StackLayout Orientation="Horizontal" Spacing="10">
                <Button x:Name="vtorres_add_button"
                        Text="Agregar Persona" 
                        Command="{Binding AddPersonCommand}" 
                        HorizontalOptions="Center" 
                        Clicked="OnNewButtonClicked" 
                        BackgroundColor="Pink" 
                        TextColor="LightSeaGreen" 
                        CornerRadius="5" />
                <Button x:Name="vtorres_get_button"
                        Text="Obtener Personas" 
                        Command="{Binding RefreshPeopleCommand}" 
                        HorizontalOptions="Center" 
                        BackgroundColor="CornflowerBlue" 
                        TextColor="White" 
                        CornerRadius="5" />
            </StackLayout>


            <Label x:Name="vtorres_status_message"
                   Text="{Binding StatusMessage}" 
                   FontSize="14"
                   TextColor="DarkRed"
                   HorizontalOptions="Center" 
                   VerticalOptions="EndAndExpand" />


            <ListView x:Name="vtorres_people_list"
                      ItemsSource="{Binding People}" 
                      SelectionMode="Single" 
                      ItemSelected="OnItemSelected"
                      BackgroundColor="LightCyan" 
                      HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ScrollView>

</ContentPage>
